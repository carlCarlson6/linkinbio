{
  "name": "my-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "fe:dev": "npm run dev --workspace=frontend",
    "fe:build": "npm run build --workspace=frontend",
    "be:dev": "npm run dev --workspace=backend",
    "be:build": "npm run build --workspace=backend",
    "build": "concurrently \"npm run fe:build\" \"npm run be:build\"",
    "dev": "concurrently \"npm run fe:dev\" \"npm run fe:dev\"",
    "start": "npm run start --workspace=backend"
  },
  "dependencies": {
    "concurrently": "^9.2.0"
  }
}
